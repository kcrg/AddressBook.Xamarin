<ContentPage
    x:Class="WorkForInsys.Views.ContactsListPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:WorkForInsys.Models="clr-namespace:WorkForInsys.Models"
    xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    Title="Contacts"
    prism:ViewModelLocator.AutowireViewModel="True"
    Visual="Material"
    mc:Ignorable="d">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding AddContactCommand}"
            IconImageSource="icon_add_contact.xml"
            Text="Add"/>
        <!--<ToolbarItem
            BindingContext="{Binding Source={x:Reference collectionView}, Path=BindingContext}"
            Command="{Binding DeleteContactCommand}"
            CommandParameter="{Binding Source={x:Reference CurrentSelection}, Path=BindingContext.collectionView}"
            IconImageSource="icon_delete.xml"
            Text="Delete"/>-->
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <Grid>
            <ActivityIndicator
                HorizontalOptions="CenterAndExpand"
                IsRunning="{Binding IsLoading}"
                VerticalOptions="CenterAndExpand"/>

            <CollectionView x:Name="collectionView"
                ItemsSource="{Binding ContactsList}"
                SelectionMode="Single">
                <CollectionView.Behaviors>
                    <b:EventToCommandBehavior
                        Command="{Binding ItemTappedCommand}"
                        EventArgsParameterPath="CurrentSelection"
                        EventName="SelectionChanged"/>
                </CollectionView.Behaviors>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="WorkForInsys.Models:ContactModel">
                        <StackLayout Padding="10">
                            <Frame CornerRadius="0">
                                <Grid>
                                    <StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Label Text="{x:Binding Name}"/>
                                            <Label Text="{x:Binding Surname}"/>
                                        </StackLayout>

                                        <Label Text="{x:Binding PhoneNumber}"/>

                                        <Label Text="{x:Binding ID}"/>
                                    </StackLayout>

                                    <ImageButton
                                        BackgroundColor="White"
                                        BindingContext="{Binding Source={x:Reference collectionView}, Path=BindingContext}"
                                        Command="{Binding Source={x:Reference collectionView}, Path=BindingContext}"
                                        CommandParameter="{x:Binding ID}"
                                        HeightRequest="32"
                                        HorizontalOptions="EndAndExpand"
                                        Source="icon_delete.xml"
                                        VerticalOptions="CenterAndExpand"
                                        WidthRequest="32"/>
                                </Grid>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Grid>
                        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                            <Label
                                FontFamily="Lato-Bold.ttf#Lato-Bold"
                                FontSize="18"
                                HorizontalTextAlignment="Center"
                                Text="There is no contacts to show."
                                TextColor="DarkGray"/>
                            <Label
                                FontFamily="Lato-Semibold.ttf#Lato-Semibold"
                                FontSize="14"
                                HorizontalTextAlignment="Center"
                                Text="Try add new one!"
                                TextColor="DarkGray"/>
                        </StackLayout>
                    </Grid>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>